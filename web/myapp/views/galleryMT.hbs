<div class="container">
    <div class="Subheading">
        <!-- Section heading -->
        <h2 class="h2-responsive font-weight-bold text-left my-3">{{heading}}</h2>
        <hr>
    </div>
    <section>
        <div class="row">
            <div class="col-md-5 mainform">
                <div class="headinglogin">
                    <h2>Create Gallery</h2>
                </div>
                <form class="Registration-form form" action="/galleryMT/upload"" method="post" enctype="multipart/form-data" role="form">
                    <span id="result"></span>
                    {{> message}}
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md">
                                <label for="title" class="control-label">Title</label>
                                <div>
                                    <input type="text" id="title" placeholder="Title" name="title" required autofocus>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md">
                                 <input type="file" id="customFile" name="customFile" required>
                            {{!-- <label class="custom-file-label" for="customFile">Choose image</label> --}}

                            </div>
                        </div>

                    </div>

                    <button type="submit" class="btn btn-primary btn-block btnform registerButton"
                        style="border-radius: 5px;">Create</button>
                </form> 

            </div>
            
            <div class="col-md-1"></div>
            <div class="col-md-6">
                <table class="table table-striped table-responsive-md table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Image Name</th>
                            <th scope="col">Image</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each Galleries}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.imagePath}}</td>
                            <td><img style="width:50px;height:50px;" src="/images/gallery/{{this.imagePath}}"
                                    title="{{this.title}}" /></td>
                            {{!-- <td>Edit  <a  href="#" onclick="document.getElementById('form-delete').submit();return false">Delete</a>&nbsp; 
                                <form id="form-delete" action="/galleryMT/delete/{{this._id}}" method="POST">
                                </form>  
                            </td> --}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
</div>
</section>