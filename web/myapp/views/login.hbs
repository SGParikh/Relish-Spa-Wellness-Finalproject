<section>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-5 mainform">
                <div class="headinglogin">
                    <h2>
                        Login
                    </h2>
                </div>
                <form class="login-form form" action="/login/signin" method="post">
                    {{> message}}
                    <div class="form-group">
                        <div class="row">

                            <div class="col-md form-field form-field--input form-field--inputEmail">
                                <label for="email" class="control-label">Email address</label>
                                <input type="email" id="email" class="form-control" placeholder="Email address" name="email"
                                    required autofocus></div>

                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">

                            <div class="col-md form-field form-field--input form-field--inputPassword">
                                <label for="password" class="control-label">Password</label>
                                <input type="password" id="password" class="form-control" placeholder="Password" name="password"
                                    required></div>

                        </div>

                    </div>
